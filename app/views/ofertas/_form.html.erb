<%= simple_form_for @oferta, :html => { :multipart => true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :titulo %>
	<%= f.file_field :foto, :label => 'Foto' %>
    <%= f.input :descricao %>
    <%= f.input :data %>
    <%= f.input :preco_de %>
    <%= f.input :preco_por %>
	<%= f.association :parceiro, :label => "Selecione o parceiro", :prompt => "Nenhum parceiro selecionado",  :label_method => :nome %>
    <%= f.input :ativo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
