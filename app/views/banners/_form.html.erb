<%= simple_form_for(@banner) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :url %>
    <%= f.input :path %>
	<%= f.file_field :imagem, :label => 'Imagem' %>
    <%= f.association :parceiro, :label => "Selecione o parceiro", :prompt => "Nenhum parceiro selecionado",  :label_method => :nome %>
    <%= f.input :data %>
    <%= f.input :ativo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
